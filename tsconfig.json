{
	"compilerOptions": {
    "rootDir": "./",
    // "outDir": "./bundle",
		"declarationDir": "./",
		"target": "ES5",
		"jsx": "react",
    "declaration": true,
		"noImplicitAny": false,
		"removeComments": true,
		"sourceMap": false,
		"module": "ESNext",
		"allowJs": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		// "baseUrl": "",
		// "plugins": [{ "name": "typescript-plugin-css-modules" }]
	},
	"exclude": ["node_modules/"],
	"include": ["src/*"]
}
